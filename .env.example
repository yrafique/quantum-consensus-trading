# QuantumConsensus Trading System Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
QUANTUM_ENVIRONMENT=development
QUANTUM_DEBUG=true
QUANTUM_VERSION=1.0.0

# =============================================================================
# APPLICATION SERVERS
# =============================================================================
QUANTUM_API_HOST=localhost
QUANTUM_API_PORT=8000
QUANTUM_UI_HOST=localhost
QUANTUM_UI_PORT=8501

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
QUANTUM_DATABASE_HOST=localhost
QUANTUM_DATABASE_PORT=5432
QUANTUM_DATABASE_NAME=quantum_consensus
QUANTUM_DATABASE_USERNAME=quantum_user
QUANTUM_DATABASE_PASSWORD=secure_password_change_me

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
QUANTUM_REDIS_HOST=localhost
QUANTUM_REDIS_PORT=6379
QUANTUM_REDIS_DB=0
QUANTUM_REDIS_PASSWORD=

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
QUANTUM_MLX_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit
QUANTUM_MLX_MAX_TOKENS=2048
QUANTUM_MLX_TEMPERATURE=0.1
QUANTUM_MLX_CACHE_DIR=models/cache

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
QUANTUM_ENABLE_LIVE_TRADING=false
QUANTUM_ENABLE_PAPER_TRADING=true
QUANTUM_DEFAULT_POSITION_SIZE=1000.0
QUANTUM_MAX_POSITION_SIZE=10000.0
QUANTUM_RISK_PER_TRADE=0.02

# =============================================================================
# MARKET DATA
# =============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# SECURITY
# =============================================================================
QUANTUM_JWT_SECRET=your-secret-key-change-in-production
QUANTUM_JWT_EXPIRATION_HOURS=24
QUANTUM_ENABLE_AUTHENTICATION=false
QUANTUM_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# LOGGING
# =============================================================================
QUANTUM_LOG_LEVEL=INFO
QUANTUM_LOG_DIR=logs
QUANTUM_LOG_FORMAT=json
QUANTUM_ENABLE_FILE_LOGGING=true

# =============================================================================
# MONITORING
# =============================================================================
QUANTUM_ENABLE_METRICS=true
QUANTUM_METRICS_PORT=9090
QUANTUM_HEALTH_CHECK_INTERVAL=30
QUANTUM_PROMETHEUS_ENABLED=false

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
POSTGRES_PASSWORD=secure_password_change_me
GRAFANA_PASSWORD=admin123