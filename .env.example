# River Trading System Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
RIVER_ENVIRONMENT=development
RIVER_DEBUG=true
RIVER_VERSION=1.0.0

# =============================================================================
# APPLICATION SERVERS
# =============================================================================
RIVER_API_HOST=localhost
RIVER_API_PORT=8000
RIVER_UI_HOST=localhost
RIVER_UI_PORT=8501

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
RIVER_DATABASE_HOST=localhost
RIVER_DATABASE_PORT=5432
RIVER_DATABASE_NAME=river_trading
RIVER_DATABASE_USERNAME=river_user
RIVER_DATABASE_PASSWORD=secure_password_change_me

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
RIVER_REDIS_HOST=localhost
RIVER_REDIS_PORT=6379
RIVER_REDIS_DB=0
RIVER_REDIS_PASSWORD=

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
RIVER_MLX_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit
RIVER_MLX_MAX_TOKENS=2048
RIVER_MLX_TEMPERATURE=0.1
RIVER_MLX_CACHE_DIR=models/cache

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
RIVER_ENABLE_LIVE_TRADING=false
RIVER_ENABLE_PAPER_TRADING=true
RIVER_DEFAULT_POSITION_SIZE=1000.0
RIVER_MAX_POSITION_SIZE=10000.0
RIVER_RISK_PER_TRADE=0.02

# =============================================================================
# MARKET DATA
# =============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# SECURITY
# =============================================================================
RIVER_JWT_SECRET=your-secret-key-change-in-production
RIVER_JWT_EXPIRATION_HOURS=24
RIVER_ENABLE_AUTHENTICATION=false
RIVER_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# LOGGING
# =============================================================================
RIVER_LOG_LEVEL=INFO
RIVER_LOG_DIR=logs
RIVER_LOG_FORMAT=json
RIVER_ENABLE_FILE_LOGGING=true

# =============================================================================
# MONITORING
# =============================================================================
RIVER_ENABLE_METRICS=true
RIVER_METRICS_PORT=9090
RIVER_HEALTH_CHECK_INTERVAL=30
RIVER_PROMETHEUS_ENABLED=false

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
POSTGRES_PASSWORD=secure_password_change_me
GRAFANA_PASSWORD=admin123